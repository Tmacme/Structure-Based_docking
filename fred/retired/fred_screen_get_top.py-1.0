## Print out the names of top ranking models
def print_score(Part, name, top):
    OUT = open(name+".fred_top"+str(top)+".txt", 'w')
    for num, P in enumerate(Part):
        OUT.write(str(num+1)+"    "+P[1]+"   "+str(P[0])+"\n")
    OUT.close()


